<views:MvxWindowsPage
    x:Class="DolarPy.WindowsUniversal.Views.ExchangeRatesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DolarPy.WindowsUniversal.Views"
    xmlns:local1="using:DolarPy.WindowsUniversal.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.Uwp.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <local1:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24">
            <!--  Título y botón de refresco  -->
            <StackPanel
                Margin="0,0,0,8"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Text="💸 DolarPy 💸" />
                <Button Margin="20,0,0,0" Click="RefreshButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            Symbol="Refresh" />
                        <TextBlock Text="Actualizar" />
                    </StackPanel>
                </Button>

            </StackPanel>

            <!--  Indicador de carga  -->
            <ProgressRing
                x:Name="LoadingRing"
                Width="40"
                Height="40"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                IsActive="False" />

            <!--  Cuadrícula de tarjetas  -->
            <GridView
                Margin="0,10,0,0"
                IsItemClickEnabled="False"
                ItemsSource="{Binding Rates}">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid
                            ItemHeight="150"
                            ItemWidth="250"
                            Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemContainerTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition />
                    </TransitionCollection>
                </GridView.ItemContainerTransitions>

                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="8"
                            Padding="12"
                            Background="#F9F9F9"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel
                                Height="126"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    MaxLines="2"
                                    Text="{Binding Provider}"
                                    TextWrapping="Wrap" />

                                <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="Gray"
                                        Text="Compra: " />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="#0078D7"
                                        Text="{Binding CompraFormatted}" />
                                </StackPanel>

                                <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="Gray"
                                        Text="Venta: " />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="#D83B01"
                                        Text="{Binding VentaFormatted}" />
                                </StackPanel>

                                <StackPanel
                                    Margin="0,6,0,0"
                                    Orientation="Horizontal"
                                    Visibility="{Binding HasReferencial, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="Gray"
                                        Text="Referencial Diario: " />
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="Gray"
                                        Text="{Binding ReferencialFormatted}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>



            <!--  Fecha de actualización  -->
            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center">
                <Run
                    FontWeight="Bold"
                    Foreground="Gray"
                    Text="Actualizado: " />
                <Run Foreground="Gray" Text="{Binding LastUpdated}" />
            </TextBlock>
        </StackPanel>
    </ScrollViewer>




</views:MvxWindowsPage>
